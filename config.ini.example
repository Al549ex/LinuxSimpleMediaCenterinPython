# Example configuration file for RaspIPTV
# Copy this file as 'config.ini' and edit the values

[PATHS]
# Path where your local movies are located
local_media_path = ./Movies/

# Path where your IPTV .m3u files are located
iptv_folder_path = ./M3U Files/

# Path to the radio JSON file
radio_file_path = radios.json

[VPN]
# Automatically enable VPN for IPTV (yes/no)
enabled_for_iptv = no

# Country to connect to with NordVPN
# Examples: Spain, United_States, United_Kingdom, Germany, France, etc.
# Leave empty for automatic server selection
country = Spain

# Note: NordVPN credentials are managed via CLI
# Run 'nordvpn login' to authenticate (only needed once)
# Run 'nordvpn set technology nordlynx' for better performance (recommended) 

[IPTV]
# Your IPTV provider URL for the "Update Channels" function
# Example: https://myprovider.com/list.m3u
source_url = 

[TMDB]
# The Movie Database API Key (optional)
# Get one free at https://www.themoviedb.org/settings/api
api_key = 

